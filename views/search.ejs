<main>
    <article>
      <!-- --Search Blog-- -->
      <section class="section recent" aria-label="recent post">
        <div class="container">
          <div class="title-wrapper">
            <h2 class="h2 section-title">
              Search <strong class="strong" style="color: rgb(10, 187, 28);;">Result</strong>
            </h2>
          </div>
  
          <ul class="grid-list">
            <% if(blogs != "") { %> <% blogs.forEach(function (blog, index){
            %>
            <li>
              <div class="blog-card">
                <figure
                  class="card-banner img-holder"
                  style="--width: 550; --height: 660"
                >
                  <img
                    src="./assets/images/<%= blog.blog_image %>"
                    width="550"
                    height="660"
                    loading="lazy"
                    alt="Being unique is better than being perfect"
                    class="img-cover"
                  />
  
                  <ul class="avatar-list absolute">
                    <li class="avatar-item">
                      <a
                        href="#"
                        class="avatar img-holder"
                        style="--width: 100; --height: 100"
                      >
                        <img
                          src="./assets/images/<%= blog.author_img %>"
                          width="100"
                          height="100"
                          loading="lazy"
                          alt="Author"
                          class="img-cover"
                        />
                      </a>
                    </li>
                  </ul>
                </figure>
  
                <div class="card-content">
                  <ul class="card-meta-list">
                    <li>
                      <a href="#" class="card-tag"><%= blog.category %></a>
                    </li>
                  </ul>
  
                  <h3 class="h4">
                    <a href="#" class="card-title hover:underline">
                      <%= blog.title %>
                    </a>
                  </h3>
  
                  <p class="card-text"><%= blog.content %></p>
                </div>
              </div>
            </li>
            <% }) %>
            <% } else { %>
              <p>Items not found</p>
            <% } %>
          </ul>
        </div>
      </section>
    </article>
  </main>
  