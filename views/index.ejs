<main>
  <article>
    <!-- --Hero Section-- -->
    <section class="section hero" aria-label="home">
      <div class="container">
        <h1 class="h1 hero-title">
          <strong class="strong" style="color: rgb(166, 89, 233);">Hey, we're blog it.</strong> See our thoughts,
          stories and ideas.
        </h1>

        <div class="wrapper">
          <form action="" class="newsletter-form">
            <input
              type="email"
              name="email_address"
              placeholder="Alteast 4 keywords"
              class="email-field"
            />

            <button type="submit" class="btn">Search</button>
          </form>

          <p class="newsletter-text">
            Search for your interests
          </p>
        </div>
      </div>
    </section>
    <!-- --Hero Section End-- -->

    <!-- --Featured Post-- -->
    <section class="section featured" aria-label="featured post">
      <div class="container">
        <p class="section-subtitle">
          Get started with our <strong class="strong">best stories</strong>
        </p>

        <ul class="has-scrollbar">
          <% if(blogs != "") { %>
            <% blogs.featured.forEach(function(blog, index) { %>
              <li class="scrollbar-item">
                <div class="blog-card">
                  <figure
                    class="card-banner img-holder"
                    style="--width: 500; --height: 600"
                  >
                    <img
                      src="./assets/images/<%= blog.blog_image %>"
                      width="500"
                      height="600"
                      loading="lazy"
                      alt="New technology is not good or evil in and of itself"
                      class="img-cover"
                    />
    
                    <ul class="avatar-list absolute">
                      <li class="avatar-item">
                        <a
                          href="#"
                          class="avatar img-holder"
                          style="--width: 100; --height: 100"
                        >
                          <img
                            src="./assets/images/<%= blog.author_img %>"
                            width="100"
                            height="100"
                            loading="lazy"
                            alt="Author"
                            class="img-cover"
                          />
                        </a>
                      </li>
                    </ul>
                  </figure>
    
                  <div class="card-content">
                    <ul class="card-meta-list">
                      <li>
                        <a href="#" class="card-tag"><%= blog.category %></a>
                      </li>
                    </ul>
    
                    <h3 class="h4">
                      <a href="/blog/<%= blog._id %>" class="card-title hover:underline">
                        <%= blog.title %>
                      </a>
                    </h3>
    
                    <p class="card-text">
                      <%= blog.content %>
                    </p>
                  </div>
                </div>
              </li>
            <% }) %>
          <% } else { %>
            <p>No items Found</p>
          <% } %>
        </ul>
      </div>
    </section>
    <!-- --Featured Post End-- -->

    <!-- --Travel Blog-- -->
    <section class="section recommended" aria-label="recommended post">
      <div class="container">

        <p class="section-subtitle">
          <strong class="strong">Travel Blogs</strong>
        </p>

        <ul class="grid-list">

          <% if(blogs !== "") { %>
            <% blogs.travel.forEach(function(blog, index) { %>
              <li>
                <div class="blog-card">
                  <figure class="card-banner img-holder" style="--width: 300; --height: 360;">
                    <img src="./assets/images/<%= blog.blog_image %>" width="300" height="360" loading="lazy"
                      alt="The trick to getting more done is to have the freedom to roam around " class="img-cover">
                    <ul class="avatar-list absolute">
                      <li class="avatar-item">
                        <a href="#" class="avatar img-holder" style="--width: 100; --height: 100;">
                          <img src="./assets/images/<%= blog.author_img %>" width="100" height="100" loading="lazy" alt="Author"
                            class="img-cover">
                        </a>
                      </li>
                    </ul>
                  </figure>
                  <div class="card-content">
                    <h3 class="h5">
                      <a href="#" class="card-title hover:underline">
                        <%= blog.title %>
                      </a>
                    </h3>
                  </div>
                </div>
              </li>
            <% }) %>

            <li>
              <div class="blog-card">
                <figure class="card-banner img-holder" style="--width: 300; --height: 360;">
                  <img src="./assets/images/view-more.jpg" width="300" height="360" loading="lazy"
                    alt="The difference is quality " class="img-cover">
                </figure>
                <div class="card-content">
                  <h3 class="h5">
                    <a href="#" class="card-title hover:underline" style="text-align: center;">
                      View More
                    </a>
                  </h3>
                </div>
              </div>
            </li>
          <% } else { %>
            <p>No items found</p>
          <% } %>
        </ul>
      </div>
    </section>
    <!-- --Travel Blog End-- -->

    <!-- --Science Blog-- -->
    <section class="section recommended" aria-label="recommended post">
      <div class="container">

        <p class="section-subtitle">
          <strong class="strong">Science Blogs</strong>
        </p>

        <ul class="grid-list">

          <% if(blogs !== "") { %>
            <% blogs.science.forEach(function(blog, index) { %>
              <li>
                <div class="blog-card">
                  <figure class="card-banner img-holder" style="--width: 300; --height: 360;">
                    <img src="./assets/images/<%= blog.blog_image %>" width="300" height="360" loading="lazy"
                      alt="The trick to getting more done is to have the freedom to roam around " class="img-cover">
                    <ul class="avatar-list absolute">
                      <li class="avatar-item">
                        <a href="#" class="avatar img-holder" style="--width: 100; --height: 100;">
                          <img src="./assets/images/<%= blog.author_img %>" width="100" height="100" loading="lazy" alt="Author"
                            class="img-cover">
                        </a>
                      </li>
                    </ul>
                  </figure>
                  <div class="card-content">
                    <h3 class="h5">
                      <a href="#" class="card-title hover:underline">
                        <%= blog.title %>
                      </a>
                    </h3>
                  </div>
                </div>
              </li>
            <% }) %>

            <li>
              <div class="blog-card">
                <figure class="card-banner img-holder" style="--width: 300; --height: 360;">
                  <img src="./assets/images/view-more.jpg" width="300" height="360" loading="lazy"
                    alt="The difference is quality " class="img-cover">
                </figure>
                <div class="card-content">
                  <h3 class="h5">
                    <a href="#" class="card-title hover:underline" style="text-align: center;">
                      View More
                    </a>
                  </h3>
                </div>
              </div>
            </li>
          <% } else { %>
            <p>No items found</p>
          <% } %>
        </ul>
      </div>
    </section>
    <!-- --Science Blog End-- -->

    <!-- --Submit Posts-- -->
    <section class="section newsletter">

      <h2 class="h2 section-title">
        Submit <strong class="strong">new posts</strong>
      </h2>

      <div action="" class="newsletter-form">
        <a href="/submit-blog" type="submit" class="btn" style="cursor: pointer;">Submit</a>
      </div>

    </section>
    <!-- --Submit Posts End-- -->

  </article>
</main>
